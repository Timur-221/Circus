<Page x:Class="Circus.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Circus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="White">
        <StackPanel>
            <Button Height="30" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 190 0 0" Content="Добавить Сотрудника" FontSize="18" Click="Button_Click_2"></Button>
            <Button Height="30" Width="200"  Margin="0 15 0 0" Content="Добавить Animal" FontSize="20" Click="Button_Click_1"></Button>
            <Button Height="30" Width="100" Margin="600 90 0 0" Content="Выход" FontSize="20" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
