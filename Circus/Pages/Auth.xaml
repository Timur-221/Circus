<Page x:Class="Circus.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Circus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">
    
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="0 130 0 0" FontSize="25"></TextBlock>
            <TextBox x:Name="LogT" Height="30" Width="200"></TextBox>
            <PasswordBox x:Name="PassB" Height="30" Width="200" Margin="0 15 0 0"></PasswordBox>
            <Button Height="30" Width="200" Margin="0 15 0 0" Content="Авторизоваться" FontSize="20" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
